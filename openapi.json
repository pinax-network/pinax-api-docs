        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "timestamp": {
                            "type": "number"
                          },
                          "date": {
                            "type": "string"
                          },
                          "contract": {
                            "type": "string",
                            "minLength": 40,
                            "maxLength": 42
                          },
                          "amount": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "timestamp",
                          "date",
                          "contract",
                          "amount"
                        ]
                      }
                    },
                    "meta": {
                      "type": "object",
                      "properties": {
                        "statistics": {
                          "type": "object",
                          "properties": {
                            "elapsed": {
                              "type": "number"
                            },
                            "rows_read": {
                              "type": "number"
                            },
                            "bytes_read": {
                              "type": "number"
                            }
                          },
                          "required": []
                        },
                        "rows": {
                          "type": "number"
                        },
                        "rows_before_limit_at_least": {
                          "type": "number"
                        },
                        "request_time": {
                          "type": "string"
                        },
                        "duration_ms": {
                          "type": "number"
                        }
                      },
                      "required": []
                    }
                  },
                  "required": [
                    "data"
                  ]
                },
                "example": {
                  "data": [
                    {
                      "contract": "0xd6e1401a079922469e9b965cb090ea6ff64c6839",
                      "amount": "8974208837245497768568420",
                      "timestamp": 1529003200,
                      "date": "2018-06-14"
                    }
                  ]
                }
              }
            }
          }
        },
        "operationId": "getBalancesEvmByAddress",
        "tags": [
          "EVM"
        ],
        "parameters": [
